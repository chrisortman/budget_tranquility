<div class="container">
<div class="row">
    <div class="col-md6 col-md-offset3">
        
    <%= form_tag(controller:'registration',action:'create',method:'POST') do %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count,"error") %> prevented this user from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <fieldset>
        <legend>New User</legend>
        <div class="form-group">
            <label for="email">Email Addres</label>
            <input type="text" class="form-control" name="user[email]">
        </div>
        <div class="form-group">
            <label for="new_password">Password</label>
            <input type="password" class="form-control" name="user[new_password]">
        </div>
        <div class="form-group">
            <label for="new_password_confirmation">Confirm Password</label>
            <input type="password" class="form-control" name="user[new_password_confirmation]">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </fieldset>
    <% end %>
    </div>
</div>
</div>
