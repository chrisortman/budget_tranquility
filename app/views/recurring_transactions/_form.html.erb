<%= form_for(@recurring_transaction) do |f| %>
  <legend></legend>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, :class => 'form-control', :placeholder => 'Description' %>
  </div>

 <div class="form-group">
    <%= f.label :amount %>
    <%= f.text_field :amount, :class => 'form-control', :placeholder => 'Description' %>
  </div> 

  <div class="form-group">
    <label>Occurs</label>
  </div>

  <div class="radio">
    <label class="radio-inline">

      <input type="radio" name="schedule_type" id="optionsRadios1" 
             value="weekly" checked>
 
        Every
        <input type="text" placeholder="2" style="width:40px">
        weeks on
        <select name="schedule[day_of_week]">
          <option>Monday</option>
          <option>Tuesday</option>
          <option>Wednesday</option>
          <option>Thursday</option>
          <option>Friday</option>
          <option>Saturday</option>
          <option>Sunday</option>
        </select>
        starting from <input name="schedule[start_on]"type="date" placeholder="1/1/2014">
    </label>
  </div>

   <div class="radio">
    <label class="radio-inline">

      <input type="radio" name="schedule" id="optionsRadios1" value="option1" checked>
      On the
      <input type="text" placeholder="1st" style="width:40px"> of each month
    </label>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class=> 'btn btn-primary' %>
  </div>

<% end %>