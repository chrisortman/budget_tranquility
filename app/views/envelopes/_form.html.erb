<% content_for :head do %>
  <script>
      $(function() {
          $('#per').change(function() {
             $('#envelope_per_month').toggle( $('#per').val() == 'envelope_per_month');
             $('#envelope_per_check').toggle( $('#per').val() == 'envelope_per_check');
          });

          $('#envelope_per_check').hide();
      });
  </script>
<% end %>

<%= form_for(@envelope) do |f| %>
  <div class="form-group">
    <%= f.label :label %>
    <%= f.text_field :label, :class => 'form-control', :placeholder => 'Label' %>
  </div>

  <div class="row">
    <div class="col-md-3">
      <label class="control-label">Amount</label>
      <div class="input-group">
        <span class="input-group-addon">$</span>
        <%= f.text_field :per_check, :class => 'form-control', :placeholder => '0.00' %>
        <%= f.text_field :per_month, :class => 'form-control', :placeholder => '0.00' %>
      </div>
    </div>
    <div class="col-md-2">
      <label class="control-label invisible">When to deduct</label>
      <select id="per" class="form-control">
        <option value="envelope_per_month">Per Month</option>
        <option value="envelope_per_check">Per Check</option>
      </select>
    </div>
  </div>

  <br >

  <div class="form-actions">
    <%= f.button :submit, :class=> 'btn btn-primary' %>
  </div>
<% end %>
